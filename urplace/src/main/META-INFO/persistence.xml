<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

  <persistence-unit name="jpa-example"> 
	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
	<class>com.urplace.src.Model.userModel</class>
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
      <property name="jakarta.persistence.jdbc.url"    value="jdbc:sqlserver://;serverName=urplaceserver.database.windows.net;databaseName=UrPlaceDB;encrypt=true" />
      <property name="jakarta.persistence.jdbc.user"   value="urPlaceRoot" />
      <property name="jakarta.persistence.jdbc.password" value="root123!" />
      <property name="hibernate.show.sql" value="true" />
    </properties>
  </persistence-unit>
</persistence>